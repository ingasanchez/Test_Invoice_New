@model IEnumerable<CustomerInvoice.Web.Models.Invoice>

@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Invoices</h2>

<table class="table" style="width:100%">
    <thead class="bg-dark">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Customer.CustName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BillingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalItbis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BillingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalItbis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>

                <td>
                  <a class="btn-primary">  @Html.ActionLink("Details", "Details", new { id = item.Id })  </a>
                </td>
            </tr>

        }
    </tbody>
    </table>
